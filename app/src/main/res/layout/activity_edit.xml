<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".view.EditActivity">

    <TextView
        android:id="@+id/CurrentUsers_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Users: "
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/name_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/age_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: " />

    <TextView
        android:id="@+id/skintone_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skintone: "
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/name_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/age_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: " />

    <TextView
        android:id="@+id/skintone_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skintone: "
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/name_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/age_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: " />

    <TextView
        android:id="@+id/skintone_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skintone: " />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:visibility="gone" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:visibility="gone" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:visibility="gone" />

    <Button
        android:id="@+id/modify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify"
        android:visibility="gone" />

</LinearLayout>

