<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="351dp"
        android:layout_height="56dp"
        android:text="This is the main activity's layout WIP"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />

    <Button
        android:id="@+id/toSessionActivity"
        android:layout_width="352dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:text="To Session Activity"
        app:layout_constraintEnd_toEndOf="@+id/mainTextView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mainTextView"
        app:layout_constraintTop_toBottomOf="@+id/mainTextView" />

    <Button
        android:id="@+id/toStatsActivity"
        android:layout_width="352dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:text="To stats Activity"
        app:layout_constraintEnd_toEndOf="@+id/mainTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mainTextView"
        app:layout_constraintTop_toBottomOf="@+id/toSessionActivity" />

    <Button
        android:id="@+id/connectBTN"
        android:layout_width="206dp"
        android:layout_height="47dp"
        android:layout_marginTop="68dp"
        android:text="Default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toStatsActivity"
        app:layout_constraintVertical_bias="0.788" />

</androidx.constraintlayout.widget.ConstraintLayout>